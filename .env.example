# Configuración del servidor
NODE_ENV=production
PORT=3000
FORM_URL=https://www.siigo.digital

# API Keys
OPENAI_API_KEY=your_openai_api_key_here
WHAPI_TOKEN=your_whapi_token_here

# Configuración de Base de Datos
# Opciones: 'sqlite' o 'postgres'
DATABASE_TYPE=postgres

# Para PostgreSQL (DigitalOcean te dará estos valores)
# Opción 1: URL completa (recomendado para DigitalOcean)
DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require

# Opción 2: Variables individuales
DB_HOST=db-host.ondigitalocean.com
DB_PORT=25060
DB_NAME=siigo_retiros
DB_USER=doadmin
DB_PASSWORD=your_password_here

# Para desarrollo local con SQLite
# DATABASE_TYPE=sqlite